@using BulkyWeb.Models
@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="row mb-3">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</form>

