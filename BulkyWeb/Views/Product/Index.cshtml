@model List<Product>

@{
    ViewData["Title"] = "Book List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Books</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create New Book
        </a>
    </div>

    <table class="table table-hover table-bordered table-success">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th style="width: 190px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.ISBN</td>
                    <td>@book.Price.ToString("C")</td>
                    <td>@book.Author</td>
                    <td>@book.Category.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
